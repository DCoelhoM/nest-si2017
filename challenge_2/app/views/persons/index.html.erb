<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Directory</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div class="header">
      <h1>Directory</h1> 
      <form>
        <input type="text" name="search" placeholder="Search">
      </form>
    </div>

    <div class="container">
      <% @persons.each do |person| %>
        <div class="person">
          <span class="name"><%= person.name %></span><br>
          <span class="company"><%= person.company %></span><br>
          <span class="email"><a href="mailto:<%= person.email %>"><%= person.email %></a></span><br>
          <span class="phone"><%= person.phone %></span><br>
          <%= link_to "More Info", person_path(person) %>
        </div>
      <% end %>
    </div>

    <div class="new">
      <h1>New Person</h1>
      <%= form_for :person, url: persons_path do |f| %>
        <%= f.text_field :name, placeholder:"Name" %>
        <%= f.text_field :company, placeholder:"Company" %>
        <%= f.text_field :email, placeholder:"Email" %>
        <%= f.text_field :phone, placeholder:"Phone" %>
        <%= f.text_field :photo, placeholder:"Photo" %>
        <%= f.submit %>
      <% end %>
    </div>
  </body>
</html>
