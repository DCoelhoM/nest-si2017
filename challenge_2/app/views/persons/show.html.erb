<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Directory</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div class="header">
      <h1><%= link_to 'Directory', '/' %></h1> 
      <form>
        <input type="text" name="search" placeholder="Search">
      </form>
    </div>

    <div class="container">
      <div class="photo">
        <img src="<%= @person.photo %>">
      </div>
      <div class="info">
        <span class="name"><%= @person.name %></span><br>
        <span class="company"><%= @person.company %></span><br>
        <span class="email"><a href="mailto:<%= @person.email %>"><%= @person.email %></a></span><br>
        <span class="phone"><%= @person.phone %></span><br>
      </div>
    </div>

  </body>
</html>
